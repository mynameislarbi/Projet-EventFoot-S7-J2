<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Edit <%= resource_name.to_s.humanize %></h1>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-4">
          <%= f.label :first_name, "Prénom :" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :last_name, "Nom de famille :" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :email, "Email :"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>


        <div class="form-group">
          <%= f.label :password, "Nouveau mot de passe :" %> <br><i style="font-size:12px; color:  #b7b7b7  ">(Laissez vide si vous ne voulez pas le changer)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
          <% if @minimum_password_length %>
            <em style="color:red;font-size:12px;background-color:  #ffe8e3 ; padding:2px 10px; border-radius:5px "><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="form-group my-4">
          <%= f.label :password_confirmation, "Confirmation nouveau mot de passe :" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "form-control"%>
        </div>

        <div class="form-group mb-4">
          <%= f.label :current_password, "Mot de passe actuel :" %> <br><i style="font-size:12px; color:  #b7b7b7  ">(Nous avons besoin de votre mot de passe actuel pour confirmer les changements)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"%>
        </div>

        <div class="actions my-5">
          <%= f.submit "Mettre à jour", class: "btn btn-lg btn-primary btn-block"%>
        </div>

        <% end %>

        <hr>

        <h3>Supprimer mon compte</h3>

        <p>Mécontent? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "êtes vous sûr ?" }, method: :delete, class:"btn btn-danger rounded-pill" %></p>

        <%= link_to "Retour", :back %>
        <div style="mt-3"><br><br><br></div>

    </div>
  </div>
</div>




